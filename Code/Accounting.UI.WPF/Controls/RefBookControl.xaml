<UserControl x:Class="Accounting.UI.WPF.Controls.RefBookControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinHeight="100" MinWidth="200">
	<DockPanel LastChildFill="True">
		<StackPanel Orientation="Horizontal" DockPanel.Dock="Top">
			<Button Content="Добавить" Name="buttonAdd" Margin="5" Padding="5,2,5,2" Click="buttonAddClick" />
			<Button Content="Редактировать" Name="buttonEdit" Margin="5" Padding="5,2,5,2" Click="buttonEditClick" />
			<Button Content="Удалить" Name="buttonDelete" Margin="5" Padding="5,2,5,2" Click="buttonDeleteClick" />
		</StackPanel>
		<DataGrid Name="grid" IsReadOnly="True" AutoGenerateColumns="False" SelectionChanged="gridSelectionChanged" />
	</DockPanel>
</UserControl>
