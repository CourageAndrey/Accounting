<Window x:Class="Accounting.UI.WPF.Dialogs.SelectDateDialog"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		Title="Выбор даты" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen">
	<DockPanel LastChildFill="True">
		<DatePicker DockPanel.Dock="Top" Name="datePicker" Margin="10" />
		<CheckBox DockPanel.Dock="Top" IsChecked="True" Name="checkBox" Margin="10,5,10,5">Отображать товары, которых нет в остатках</CheckBox>
		<StackPanel DockPanel.Dock="Bottom" Margin="2" Orientation="Horizontal">
			<Button Padding="5,2,5,2" Margin="2" Content="OK" Click="okClick"/>
			<Button Padding="5,2,5,2" Margin="2" Content="Отмена" Click="cancelClick"/>
		</StackPanel>
	</DockPanel>
</Window>
