<Window x:Class="Accounting.UI.WPF.Dialogs.LongTextDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<DockPanel LastChildFill="True">
		<StackPanel Orientation="Horizontal" DockPanel.Dock="Top">
			<Image Margin="5" Height="36" Width="36" Source="../Resources/Question.png" Name="imageQuestion" />
			<Image Margin="5" Height="36" Width="36" Source="../Resources/Warning.png" Name="imageWarning" />
			<Image Margin="5" Height="36" Width="36" Source="../Resources/Information.png" Name="imageInformation" />
		</StackPanel>
		<StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom">
			<Button Margin="5" Padding="10,4,10,4" Name="buttonOk" Content="ОК" Click="okClick" />
			<Button Margin="5" Padding="10,4,10,4" Name="buttonYes" Content="Да" Click="yesClick" />
			<Button Margin="5" Padding="10,4,10,4" Name="buttonNo" Content="Нет" Click="noClick" />
		</StackPanel>
		<TextBox Name="text" Margin="5" IsReadOnly="True" />
	</DockPanel>
</Window>
