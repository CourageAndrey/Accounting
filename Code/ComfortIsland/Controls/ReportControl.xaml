<UserControl x:Class="ComfortIsland.Controls.ReportControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinHeight="100" MinWidth="200">
	<DockPanel LastChildFill="True">
		<DockPanel LastChildFill="True" DockPanel.Dock="Top">
			<Button DockPanel.Dock="Left" Margin="5" Padding="5,2,5,2" Content="Печать" Name="buttonPrint" Click="printClick" />
			<TextBlock  Margin="0,10,0,10" FontWeight="Bold" Name="header" TextAlignment="Center" />
		</DockPanel>
		<DataGrid Name="itemsGrid" IsReadOnly="True" AutoGenerateColumns="False" />
	</DockPanel>
</UserControl>
