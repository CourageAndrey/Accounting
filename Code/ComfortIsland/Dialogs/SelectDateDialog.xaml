<Window x:Class="ComfortIsland.Dialogs.SelectDateDialog"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:comfortIsland="clr-namespace:ComfortIsland"
		Title="Выбор даты" SizeToContent="WidthAndHeight"
		FontSize="{x:Static comfortIsland:Settings.FontSize}">
	<DockPanel LastChildFill="True">
		<StackPanel DockPanel.Dock="Bottom" Margin="2" Orientation="Horizontal">
			<Button Padding="5,2,5,2" Margin="2" Content="OK" Click="okClick"/>
			<Button Padding="5,2,5,2" Margin="2" Content="Отмена" Click="cancelClick"/>
		</StackPanel>
		<DatePicker Name="datePicker" Margin="10" />
	</DockPanel>
</Window>
